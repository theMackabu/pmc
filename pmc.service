[Unit]
Description=PMC Daemon
After=network.target

[Service]
User=root
Type=forking
LimitNOFILE=4096
WorkingDirectory=/root/.pmc
PIDFile=/root/.pmc/daemon.pid
ExecStart=/root/.cargo/bin/pmc daemon start
Restart=on-failure
StartLimitInterval=180
StartLimitBurst=30
RestartSec=5s

[Install]
WantedBy=multi-user.target
